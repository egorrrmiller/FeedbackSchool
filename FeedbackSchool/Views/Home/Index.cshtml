@model FeedbackSchool.ViewModels.IndexViewModels.IndexViewModel

<div class="panel-success">
    <div class="panel-heading text-center">
        <h4>Отзыв о вашей школе</h4>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(false, "", new {@class = "text-danger"})
            <div class="form-group">
                @* Представьтесь *@
                @Html.LabelFor(model => model.Feedback.Name)
                @Html.TextBoxFor(model => model.Feedback.Name, new {@class = "form-control", placeholder = "Фамилия и Имя "})
            </div>

            <div class="form-group">
                @* Выберите школу, в которой обучаетесь *@
                @Html.LabelFor(model => model.Feedback.School)
                @Html.DropDownListFor(model => model.Feedback.School, Model?.SchoolListItems, "Выберите школу", new {@class = "form-control"})
            </div>

            <div class="form-group">
                @* Выберите класс, в котором обучаетесь *@
                @Html.LabelFor(model => model.Feedback.Class)
                @Html.DropDownListFor(model => model.Feedback.Class, Model?.ClassListItems, "Выберите класс", new {@class = "form-control", placeholder = "Выберите свой класс"})
            </div>

            <div class="form-group">
                @* Отзыв о вашей школе *@
                @Html.LabelFor(model => model.Feedback.Feedback)
                @Html.TextAreaFor(model => model.Feedback.Feedback, new
                {
                    @class = "form-control",
                    placeholder = "Максимум 200 символов", maxlength = 200, style = "margin-top: 0px; margin-bottom: 0px; height: 100px;"
                })
            </div>

            <div class="form-group">
                @* Ваши любимые уроки *@
                @Html.LabelFor(model =>    model.Feedback.FavoriteLessons)
                @Html.TextAreaFor(model => model.Feedback.FavoriteLessons, new
                {
                    @class = "form-control",
                    placeholder = "Максимум 200 символов", maxlength = 200, style = "margin-top: 0px; margin-bottom: 0px; height: 100px;"
                })
            </div>

            <div class="text-center">
                @* Кнопка "Отправить отзыв" *@
                <input type="submit" value="Отправить отзыв" class="btn btn-success"/>
            </div>
        }
    </div>
</div>