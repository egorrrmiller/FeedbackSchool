@model Admin

<link rel="stylesheet" href="~/css/validate.css"/>

<div class="main">
    
    <hr/>
    @using (Html.BeginForm("DeleteAllFeedback", "Admin", FormMethod.Post))
    {
        <div class="form-group">
            <div class="text-center">
                <button type="submit" value="Очистить БД" class="btn btn-success">Очистить БД</button>
            </div>
        </div>
    }
    <hr/>
    
    @using (Html.BeginForm("Admin", "Admin", FormMethod.Post))
    {
        
        @Html.ValidationSummary(false, "", new {@class = "text-danger validate"})
        
        <div class="form-group" style="text-align: center;">
            @Html.TextBoxFor(model => model.FeedbackNumber, new
            {
                placeholder = "№ отзывов через запятую",
                @class = "form-control"
            })
        </div>
        <div class="text-center">
            <input type="submit" value="Удалить отзыв" class="btn btn-success"/>
        </div>
    }
    <hr/>
    
</div>
