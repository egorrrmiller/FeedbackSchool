@page
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Двухфакторная аутентификация (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h4>@ViewData["Title"]</h4>
@if (Model.Is2faEnabled)
{
    if (Model.RecoveryCodesLeft == 0)
    {
        <div class="alert alert-danger">
            <strong>У вас не осталось кодов восстановления.</strong>
            <p>Вы должны <a asp-page="./GenerateRecoveryCodes">создать новый набор кодов восстановления</a>, прежде чем сможете войти в систему с кодом восстановления.</p>
        </div>
    }
    else if (Model.RecoveryCodesLeft == 1)
    {
        <div class="alert alert-danger">
            <strong>У вас остался 1 код восстановления.</strong>
            <p>Вы можете <a asp-page="./GenerateRecoveryCodes">создать новый набор кодов восстановления</a>.</p>
        </div>
    }
    else if (Model.RecoveryCodesLeft <= 3)
    {
        <div class="alert alert-warning">
            <strong>У вас @Model.RecoveryCodesLeft кодов восстановления.</strong>
            <p>Вы можете <a asp-page="./GenerateRecoveryCodes">сгенерировать новый набор кодов восстановления</a>.</p>
        </div>
    }

    if (Model.IsMachineRemembered)
    {
        <form method="post" style="display: inline-block">
            <button type="submit" class="btn btn-primary m-1">Забыть этот браузер</button><br/>
        </form>
    }
    <br/><a asp-page="./Disable2fa" class="btn btn-primary m-1">Отключить 2FA</a><br/>
    <a asp-page="./GenerateRecoveryCodes" class="btn btn-primary m-1">Сброс кодов восстановления</a><br/>
}

@if (!Model.HasAuthenticator)
{
    <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary m-1">Добавить аутентификатор</a><br/>
}
else
{
    <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary m-1">Настройка аутентификатора</a><br/>
    <a id="reset-authenticator" asp-page="./ResetAuthenticator" class="btn btn-primary m-1">Сбросить аутентификатор</a>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}